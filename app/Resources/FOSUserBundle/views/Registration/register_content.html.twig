{% trans_default_domain 'FOSUserBundle' %}


  <div  style="margin-top:20px;" 
        class="mainbox col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2">    

    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title" style="text-align: center">
          Création de mon profil
        </h3>
      </div>

      <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} 
            method="POST" class="fos_user_registration_register">
        <div class="panel-body" >
          <div class ="row" style="padding-bottom: 3px">
            <div class="form-group">
              {{ form_label(form.email, 'form.email' | trans, {'label_attr': {'class': 'col-sm-3 control-label'}} ) }}
  {# TODO : dégager le col-sm-2 qui est généré par défault.... #}
              {{ form_errors(form.email) }}
              <div class="col-sm-9">
                {{ form_widget(form.email , {'attr': {'class': 'form-control'}})}}
              </div>
            </div>
          </div>
          <div class ="row" style="padding-bottom: 3px">
            <div class="form-group">
              {{ form_label(form.username, 'form.username' | trans, {'label_attr': {'class': 'col-sm-3 control-label'}} ) }}
              {{ form_errors(form.username) }}
              <div class="col-sm-9">
                {{ form_widget(form.username , {'attr': {'class': 'form-control'}})}}
              </div>
            </div>             
          </div>
          <div class ="row" style="padding-bottom: 3px">
            <div class="form-group">
              {{ form_label(form.plainPassword.first, 'form.password' | trans , {'label_attr': {'class': 'col-sm-3 control-label'}})}}
              <div class="col-sm-9">
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}          
              </div>        
            </div>
          </div>
          <div class ="row" style="padding-bottom: 3px">
            <div class="form-group">
              {{ form_label(form.plainPassword.second, 'form.password_confirmation' | trans , {'label_attr': {'class': 'col-sm-3 control-label'}})}}
              <div class="col-sm-9">
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}          
              </div>        
            </div>
          </div>
          <div class ="row" style="padding-bottom: 3px">
            <div class="form-group"> 
              {% set label %}{{ 'classroom'|trans({}, 'messages') }}{% endset %}
              {{ form_label(form.classrooms, label, {'label_attr': {'class': 'col-sm-3 control-label'}})}}
              <div class="col-sm-9">
                {{ form_widget(form.classrooms, {'attr': {'class': 'form-control'}}) }}          
              </div>        
            </div>
          </div>
              
          <div class ="row" style="padding-bottom: 3px">
            <div class="form-group">
              <div class="col-sm-3"></div>              
              <div class="col-sm-9"> 
                {{ form_widget(form.isteacher, {'attr': {'onchange': 'teacherOnOff()'}}) }}
              </div>
              {# <div class="col-sm-10">
                {{ form_widget(form.isteacher, {'attr': {'class': 'form-control'}}) }}          
              </div>
              #}
            </div>
          </div>

          {{ form_rest(form) }}

          {#{ form_widget(form) }#}
        </div>
        <div class="panel-footer" style="overflow:hidden;text-align:right;">
          <div class="form-group">
            <div>
              <input type="submit" class= "btn btn-success btn-sm" value="{{ 'registration.submit'|trans }}" />
            </div>
          </div>  
        </div>

      </form>
    </div>
  </div>
