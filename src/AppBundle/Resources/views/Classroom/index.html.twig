{% extends '::base.html.twig' %}

{% block body -%}
  
 <h2>Classrooms </h2>
   
  <div class="table-responsive">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>          
          <th>{{'theader.hname' | trans}}</th>
          <th>{{'theader.hactions' | trans}}</th>
        </tr>
      </thead>
      <tbody>
        {% for entity in entities %}
          <tr>            
            <td>{{ entity.name }}</td>
            <td>               
              <a href="{{ path('classroom_edit', { 'id': entity.id }) }}">edit</a>
              {% if entity.user.id == user.id %}
               / <a href="{{ path('classroom_delete', { 'id': entity.id }) }}">delete</a>
              {% endif %} 
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>

    <ul>
      <li>
        <a href="{{ path('classroom_new') }}">
          Create a new entry
        </a>
      </li>
    </ul>
  {% endblock %}
