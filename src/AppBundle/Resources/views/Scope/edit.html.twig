{% extends '::base.html.twig' %}

{% block body %}
  <div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title" style="text-align: center">
          Scope edit
        </h3>
      </div>
      <div class="panel-body">
        {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}
        <div>
          
            {{ form_label(edit_form.name, 'form.scope'|trans, {'label_attr': {'class': 'col-sm-2 control-label'}})}}
            {{ form_errors(edit_form.name) }}
            <div class="col-sm-4">
                {{ form_widget(edit_form.name, 
                 {'attr': {'class': 'form-control', 'placeholder':'short name'}}) }}
            </div>
          </div>
        </div>  
          {{ form_end(edit_form) }}
      <hr />
      <div> 
          <div class="form-group col-sm-2 control-label">
            <button>
              <a href="{{ path('scope_index') }}">
                Back to the list
              </a>
            </button>
          </div>   
      </div>
    </div>
  </div> 
{% endblock %}
