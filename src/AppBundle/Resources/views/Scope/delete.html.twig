{% extends '::base.html.twig' %}

{% block body %}
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title" style="text-align: center">
        Scope delete
      </h3>
    </div>
    <div class="panel-body">
      {{ form_start(delete_form) }}
      {{ form_errors(delete_form) }}
      <div>          
        {{ form_label(delete_form.name, 'form.scope.name'|trans, {'label_attr': {'class': 'col-sm-2 control-label'}})}}
        {{ form_errors(delete_form.name) }}
        <div class="col-sm-10">
          {{ form_widget(delete_form.name, 
                  {'attr': {'class': 'form-control', 'placeholder':'short name', 'readonly':true}}) }}
        </div>
      </div>
      <hr /> 
      <div class="form-group col-sm-2 control-label">
        {{ form_widget(delete_form.submit) }}
      </div>
      <div class="form-group col-sm-2 control-label">
        <button>
          <a href="{{ path('scope_index') }}">
            Back to the list
          </a>
        </button>
      </div>  
      {{ form_end(delete_form) }}
    </div>
  </div>

{% endblock %}
