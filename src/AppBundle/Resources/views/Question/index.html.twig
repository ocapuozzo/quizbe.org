{% extends '::base.html.twig' %}

{% block stylesheets %}
  {{ parent() }}  
  <link rel="stylesheet"
        href="{{ asset('assets/vendor/kartik-v/bootstrap-star-rating/css/star-rating.min.css') }}">

{% endblock %}
 
{% block body -%}
<h2>{{'question' | trans}}</h2>
<div class="table-responsive">
  <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>{{'iquestion.listheader.name' | trans}}</th>
                <th>{{'iquestion.listheader.designer_s' | trans}}</th>
                <th>{{'iquestion.listheader.createdate' | trans}}</th>
                <th>{{'iquestion.listheader.actions' | trans}}</th>
                <th>{{'iquestion.listheader.rating' | trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                <td>{{ entity.designers }}</td>
                <td>{% if entity.datecrea %}{{ entity.datecrea|date('d/m/Y H:i') }}{% endif %}</td>
                <td>
                 <a href="{{ path('question_show', { 'id': entity.id }) }}">show</a>
                 {% if entity.canUpdate(user) %}
                  / <a href="{{ path('question_edit', { 'id': entity.id }) }}">edit</a>
                 {% endif %}  
                </td>
                <td> <input class="rating" value="{{entity.avgRating}}" data-size="xxs" data-show-clear="false" data-show-caption="false" readonly="true" /> </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
        <ul>
        <li>
            <a href="{{ path('question_new') }}">
                {{'iquestion.link.add' | trans}}
            </a>
        </li>
    </ul>
    {% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script type="text/javascript" src="{{asset('assets/vendor/kartik-v/bootstrap-star-rating/js/star-rating.min.js')}}"></script>
        
{% endblock %}