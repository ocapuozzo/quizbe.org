{% extends '::base.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet"
        href="{{ asset('assets/vendor/kartik-v/bootstrap-star-rating/css/star-rating.min.css') }}">

{% endblock %}

{% block body -%}
    <h1>Question list</h1>
<div class="table-responsive">
  <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>Name</th>
                <th>Designers</th>
                <th>Datecrea</th>
                <th>Actions</th>
                <th>Rating</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                <td>{{ entity.designers }}</td>
                <td>{% if entity.datecrea %}{{ entity.datecrea|date('d/m/Y H:i') }}{% endif %}</td>
                <td>
                 <a href="{{ path('question_show', { 'id': entity.id }) }}">show</a>
                </td>
                <td> <input class="rating" value="{{entity.avgRating}}" data-size="xxs" data-show-clear="false" data-show-caption="false" readonly="true" /> </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
        <ul>
        <li>
            <a href="{{ path('question_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}

{% block javascripts %}
  {{ parent() }}
  {% javascripts '%kernel.root_dir%/../vendor/kartik-v/bootstrap-star-rating/js/star-rating.min.js' %}
  <script type="text/javascript" src="{{ asset_url }}"></script>
  {% endjavascripts %}
        
{% endblock %}